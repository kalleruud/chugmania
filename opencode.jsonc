{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "opencode/claude-haiku-4-5",
  "small_model": "opencode/grok-code",
  "instructions": ["*.md"],
  "mcp": {
    "github": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {file:./.secrets/github.key}",
      },
    },
    "sonarqube": {
      "enabled": false,
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_URL",
        "-e",
        "SONARQUBE_IDE_PORT",
        "mcp/sonarqube",
      ],
      "environment": {
        "SONARQUBE_URL": "https://sonarqube.kallerud.no",
        "SONARQUBE_TOKEN": "{file:./.secrets/sonarqube.key}",
        "SONARQUBE_IDE_PORT": "64121",
      },
    },
  },
}
