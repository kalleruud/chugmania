{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "opencode/claude-haiku-4-5",
  "small_model": "opencode/grok-code",
  "instructions": ["*.md"],
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:./.secrets/github.key}",
      },
    },
  },
}
